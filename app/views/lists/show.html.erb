<div class="container">
  <h1> <%= @list.title %><button data-bs-toggle="modal" class="edit-button" data-bs-target="#editList">
      <i class="fa-regular fa-pen-to-square"></i>
    </button> </h1>
  <% @items.each do |item| %>
  <%= item.name %>
  <%= link_to edit_colocation_list_item_path(@colocation, @list, item) do %>
  <i class="fa-regular fa-pen-to-square"></i>
  <% end %>
  <%= link_to colocation_list_item_path(@colocation, @list, item), data: {turbo_method: :delete, turbo_confirm: "Etes-vous sûr.e ?"} do %>
  <i class="fa-solid fa-trash"></i>
  <% end %> <br>
  <% end %>

  <%= link_to "ajouter un élément",  new_colocation_list_item_path(@colocation, @list) %> <br>
  <%= link_to "Retour aux listes", colocation_lists_path %>
</div>


<!-- Modal -->
<div class="modal fade" id="editList" tabindex="-1" aria-labelledby="editList" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">
          <div class="container">
            <%= simple_form_for [@colocation, @list], method: :patch do |f| %>
            <%= f.input :title %>
            <%= f.button :submit, 'Enregistrer' %>
            <% end %>
          </div>
      </div>
    </div>
  </div>

</div>
