          <%= link_to colocation_list_path(@colocation, list) do%>
            <%= list.title.upcase %>
              <%= link_to colocation_list_path(@colocation, list), data: {turbo_method: :delete, turbo_confirm: "Etes-vous sÃ»r.e ?"} do %>
              <i class="fa-solid fa-trash"></i>
