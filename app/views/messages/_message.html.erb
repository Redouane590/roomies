<div id="message-<%= message.id %>" class="my-3 <%= message.user.id == current_user.id ? 'right-side-message':'left-side-message' %>">
  <small class="small">


    <div class="container container-relative">
        <div class ="user-nickname">
          <h4><%=message.user.nickname %></h4>
        </div>
        <div class="container-avatar">
          <% if message.user.photo.attached? %>
            <%= cl_image_tag message.user.photo.key, crop: :fill, class: "avatar-chat", alt: "avatar-chat" %>
          <% else %>
          <%= image_tag "avatar.png.png", class: "avatar-large", alt: "avatar-large" %>
          <% end %>
        </div>
    </div>
    <%#= message.created_at.strftime("%d %B %Y %Hh %Mmin %Ss") %>
  </small>
    <h5 class="message-content"><%= message.content%></h5>
    <%= message.created_at.strftime("%d-%m-%y %H:%M") %>
</div>



<%# > I18n.localize Time.now, :format => :short %>
