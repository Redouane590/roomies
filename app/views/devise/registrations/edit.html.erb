<h2>Modifier mon compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Nouveau mot de passe",
                hint: "Ne rien inscrire si vous ne souhaitez pas le changer",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: "Confirmez votre mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, label: "Mot de passe actuel",
                hint: "Nous avons besoin de votre mot de passe actuel pour confirmer les changements",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mettre à jour"%>
  </div>
<% end %>


<div class="d-flex align-items-center">
  <div>Vous nous quittez?</div>
  <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr.e?" }, method: :delete, class: "btn btn-link" %>
</div>

<%= link_to "Retour", :back %>
