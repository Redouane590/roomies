<% if current_user %>
<nav class="navbar navbar-expand-lg navbar-light navbarbotom">
  <%= link_to root_path do  %>
    <i class="fas fa-house <%= active_class(root_path) %>"></i>
  <% end %>
  <%= link_to colocation_lists_path(current_user.user_colocations.first.colocation_id) do  %>
    <i class="fas fa-list <%= active_class(colocation_lists_path(current_user.user_colocations.first.colocation_id)) %>"></i>
  <% end %>
  <%= link_to calendar_path do  %>
    <i class="fas fa-calendar-week <%= active_class(calendar_path) %>"></i>
  <% end %>

  <%= link_to colocation_notes_path(current_user.user_colocations.first.colocation_id) do  %>
    <i class="far fa-sticky-note <%= active_class(colocation_notes_path(current_user.user_colocations.first.colocation_id)) %>"></i>
  <% end %>

  <% if user_signed_in? %>

  <%# je choisis ci-dessous la colocation du current_user -> a modifier si le current_user a plusieurs colocations %>
     <% colocation = Colocation.find(current_user.user_colocations.first.colocation.id)  %>
    <% chatroom = Chatroom.find_by(colocation: colocation)  %>
    <%# if current_user && chatroom %>
      <%= link_to colocation_chatroom_path(colocation.id, chatroom.id), class: "navbar-brand" do  %>
        <i class="fas fa-comment-dots <%= active_class(colocation_chatroom_path(colocation.id, chatroom.id)) %>"></i>
      <% end %>
  <% end %>
</nav>
<% end %>
